<h1>New course</h1>

<%= form_for(@event) do |f| %>
<!-- note: without the equal sign, code is evaluated, but not rendered in browser -->
<!-- note: add all the inout fields necessary to create a new course as well as their specification -->
	<div>
	  <%= f.label :title %>
	  <%= f.text_field :title %>
	</div>

	<div>
	  <%= f.label :description %>
	  <%= f.text_area :description %>
	</div>

	<div>
	  <%= f.label :start_date %>
	  <%= f.datetime_select :start_date %>
	</div>

	<div>
	  <%= f.label :end_date %>
	  <%= f.datetime_select :end_date %>
	</div>

	<div>
	  <%= f.label :venue %>
	  <%= f.text_field :venue %>
	</div>

	<div>
	  <%= f.label :location %>
	  <%= f.text_field :location %>
	</div>

	<%= f.submit %>
	<!-- submit creates the option to actually submit the entries in the form rendered -->

<% end %>